@page
@using EmployeeMS.Localization
@using EmployeeMS.Web.Pages.Departments
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EditModalModel
@inject IStringLocalizer<EmployeeMSResource> L
@{
    Layout = null;
}
<form asp-page="/Departments/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Department.Id" />
            <abp-input asp-for="Department.Name" />
            <abp-input asp-for="Department.ShortBio" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
